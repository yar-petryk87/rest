h1= heading
h3= remark

each row in rows
	p(style="display:inline-block; width:300px")= row.data 
	a(style="margin-left:50px" href='/eneida/edit?id=' + row.id) Edit
	form(method='post' style="display:inline-block;" action='/eneida/delete')
		input(type='hidden' name='row_id' value='' + row.id)
		input(style="margin-left:30px" type='submit' value='Delete')
	a(style="margin-left:100px" href='/eneida/get?id=' + row.id) Info
	br
if buf
	form(method='post' action='/eneida/update?id=' + buf.id)
		p= buf.data
		input(type='text' name='buffer' value=buf.data)
		input(type='submit' value='update')
else
	form(method='post' action='/eneida/add')
		input(type='text' name='newrow')
		input(type='submit' value='ADD')



